<div id="home">
    <div class="d-flex justify-content-center">
        <div class="container-sm m-5 p-5 align-items-center justify-content-center rounded-3"
            style=" background-color: #aab1e0; max-width:600px;  box-shadow: 4px 3px 7px 2px #00000040;">
            <div class="landing-text ">
                <h1>Welcome to Trippin'</h1>
                {{!-- <h2>Log in to your account</h2> --}}
            </div>
            <div class="d-flex justify-content-center pb-sm-3 mb-sm-4">
                <h2>Log in to your account</h2>
            </div>
            <div class="container d-flex align-items-center justify-content-center signup-form">
                <form action="/doLogin" method="post" class="needs-validation ">
                    <div class="col-lg form-floating mb-3">
                        <input type="text" class="form-control {{#if message.username}} is-invalid {{/if}}"
                            value="{{message.username.value}}" name="username" id="form-username"
                            placeholder="Όνομα χρήστη" required="required" autofocus>
                        <label class="form-label" for="form-username">Όνομα χρήστη</label>
                        <div class="invalid-feedback">{{message.username.msg}}</div>
                    </div>
                    <div class="col-sm form-floating mb-3">
                        <input type="password" class="form-control {{#if message.password}} is-invalid {{/if}}"
                            value="{{message.password.value}}" name="password" id="password" placeholder="Συνθηματικό"
                            required="required">
                        <label class="form-label" for="password">Συνθηματικό</label>
                        <div class="invalid-feedback">{{message.username.msg}}</div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-dark btn-lg pb-sm-3 mb-3">Log in</button>
                    </div>
                    <div class="col-sm  mb-sm-2">
                        <a href="/register" style="color: black;  ">Click here if you dont have an
                            account</a>
                    </div>
                    <div class=" d-flex justify-content-center col-sm ">
                        <a href="#" style="color: black;  ">Forgot your password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>