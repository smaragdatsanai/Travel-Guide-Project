<section class="header">
    <h1>Travel Across The Globe</h1>
    <div class="row ">
        <div class="col d-flex align-content-center justify-content-center">
            <p>Build your next vacation</p>
        </div>
    </div>
    <div class="row ">
        <form id="searchForm" action="/searchForPlan" method="post">
            <div class="input-group">
                <input type="text"  value="{{searchInput}}" name="searchInput"  class="form-control" id="searchInput" placeholder="Search Travel Plan">
                <div class="input-group-append">
                    <button type="submit" class="input-group-text btn">Search</button>
                </div>
            </div>
        </form>
    </div>
</section>

<div class="padding ">
   {{#if message}}
    <div class="container cont_style vstack gap-3 col-md-7 mx-auto py-5  ">
         <div class="row ">
    <div class="col-6 offset-3">
        <div class="alert alert-primary" role="alert">
            {{message}}
        </div>
    </div>
</div>
{{/if}}


