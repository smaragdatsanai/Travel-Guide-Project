<section class="header">
    <h1>Travel Across The Globe</h1>
    <div class="row">
        <div class="col d-flex align-content-center justify-content-center">
            <p>Build your next vacation</p>
        </div>
    </div>
    <div class="row">
        <div class="col d-flex align-content-center justify-content-center">
           
        <form id="searchForm" action="/searchForPlan" method="post">
            <div class="input-group">
                <input type="text" value="{{searchInput}}" name="searchInput" class="form-control" id="searchInput"
                    placeholder="Search Travel Plan">
                <div class="input-group-append">
                    <button type="submit" class="input-group-text btn">Search</button>
                </div>
            </div>
        </form>
    </div>
</section>


<div class="padding ">
    {{#if message}}
    <div class="container cont_style vstack gap-3 col-md-7 mx-auto py-5  ">
        <div class="row ">
            <div class="col-6 offset-3">
                <div class="alert alert-primary" role="alert">
                    {{message}}
                </div>
            </div>
        </div>
        {{/if}}


        <section class="features">
            <div class="padding ">
                <h1 class="m-0">Our top Travel Plans</h1>
                <div class="card-group">
                    {{#each Plans}}
                    <div class="card">
                        <div class="feature-box">
                            <div class="feature-img">
                                <img src="{{this.Destinations.[0].Image}}">
                            </div>
                            <div class="price">
                                <p>{{this.budget}}$</p>
                            </div>
                            <div class="rating">
                                
                                {{#fillstars ../planRating.[@index].averageRatind}}
                                <i class="fa fa-star"></i>
                                {{/fillstars}}
                                {{#emptystars ../planRating.[@index].averageRatind}}
                                <i class="fa fa-star-o" aria-hidden="true"></i>
                                {{/emptystars}}
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="feature-details">
                                <h4>{{name}} </h4>
                                
                                <p>Rating:{{getRatingAtIndex ../planRating @index}}</p>
                                {{!-- Index: {{@index}} --}}
                                <a href="/viewPlan/{{id}}" class="btn btn-outline-secondary mb-2">View this plan</a>
                                <div class="card-footer">
                                    {{!-- <span><i class="fa fa-map-marker"></i> {{this.location}}</span>
                                    <span><i class="fa fa-sun-o"></i> {{this.duration}} Days</span>
                                    <span><i class="fa fa-moon-o"></i> {{this.duration}} Nights</span> --}}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}

                </div>
            </div>
    </div>
</div>
</section>

<section class="PlanButtons mb-5 pb-5">
    <div class="row ">
        <div class="col d-flex align-content-center justify-content-center">
            <a href="/buildPlan" class="btn btn-outline-secondary mb-2">BUILD YOUR OWN PLAN</a>
        </div>
    </div>
    <div class="row ">
        <div class="col d-flex align-content-center justify-content-center">
            <a href="/generatePlan" class="btn btn-outline-secondary mb-2">GENERATE PERSONALIZED PLAN</a>
        </div>
    </div>
</section>



